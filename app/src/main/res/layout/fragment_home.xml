<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".view.home.HomeFragment">

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="00:00"
        android:textColor="@android:color/black"
        android:textSize="60sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button_start_pause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/text_view_countdown"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="80dp"
        android:width="30dp"
        android:height="30dp"
        android:icon="@drawable/ic_baseline_play_circle_24" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/text_view_countdown"
        android:layout_centerVertical="true"
        android:layout_marginTop="81dp"
        android:layout_marginLeft="90dp"
        android:icon="@drawable/ic_baseline_stop_circle_24"
        android:visibility="invisible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_set_time"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/text_view_countdown"
        android:layout_centerInParent="true"
        android:layout_marginTop="81dp"
        android:icon="@drawable/ic_baseline_access_time_filled_24"
        android:outlineProvider="bounds"
        android:visibility="invisible" />

    <NumberPicker
        android:id="@+id/number_picker_h"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="129dp"
        android:layout_marginEnd="210dp" />

    <NumberPicker
        android:id="@+id/number_picker_min"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="129dp" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_view_countdown"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="217dp"
        android:layout_marginBottom="109dp"
        app:indicatorDirectionCircular="clockwise"
        app:indicatorSize="150dp"
        app:trackColor="@color/grey2"
        app:trackCornerRadius="10dp"
        app:trackThickness="15dp" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_bar_count_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_view_countdown"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="108dp"
        app:indicatorDirectionCircular="clockwise"
        app:indicatorSize="150dp"
        app:trackColor="@color/grey2"
        app:trackCornerRadius="10dp"
        app:trackThickness="15dp" />

    <ImageView android:id="@+id/ivIconTimer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="137dp"
        android:layout_marginLeft="89dp"
        android:src="@drawable/ic_outline_timer_24" />

    <ImageView
        android:id="@+id/ivIconToDo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="137dp"
        android:layout_marginEnd="-108dp"
        android:layout_toStartOf="@id/progress_bar_count_todo"
        android:src="@drawable/ic_baseline_playlist_add_check_24_beige"
         />


</RelativeLayout>